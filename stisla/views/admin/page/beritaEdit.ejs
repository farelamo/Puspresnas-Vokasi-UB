
        <section class="section">
          <div class="section-header">
            <h1>Edit Berita</h1>
          </div>

          <div class="section-body">
            <form method="post" action="./beritaEdit">
              <div class="row">
                <div class="col-12 col-md-7 col-lg-8">
                  <input type="hidden" class="d-none" name="id_berita" value="<%= berita[0].id_berita %>">
                  <input type="text" class="form-control" name="judul" value="<%= berita[0].judul %>" placeholder="Judul Berita..."><br>
                  <textarea class="form-control" name="isi" placeholder="Isi berita..." style="height: 400px"><%= berita[0].isi %></textarea>
                </div>
                <div class="col-12 col-md-5 col-lg-4">
                  <button type="submit" class="col-12 btn btn-primary btn-shadow" name="submit" value="edit">UPDATE</button><br><br>
                  <div class="card">
                    <div class="card-body">
                      <div class="section-title mt-0">Deskripsi singkat</div>
                      <div class="form-group">
                        <textarea class="form-control" name="deskripsi" placeholder="Deskripsi singkat..." style="height: 100px"><%= berita[0].deskripsi %></textarea>
                      </div>
                      <div class="section-title mt-0">Kategori</div>
                      <div class="form-group">
                        <select class="form-control" name="id_kategori">
                          <% 
                            kategori.forEach((data)=> { 
                          %>
                          <option class="eKategori" value="<%= data.id_kategori %>" <% if(data.id_kategori==berita[0].id_kategori){ %>selected<% } %> ><%= data.kategori %></option>
                          <% }) %>
                        </select>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
            </form>
          </div>
        </section>
