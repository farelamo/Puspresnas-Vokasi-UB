
        <section class="section">
          <div class="section-header">
            <h1>Tambah Artikel</h1>
          </div>

          <div class="section-body">
            <form method="post">
              <div class="row">
                <div class="col-12 col-md-7 col-lg-8">
                  <input type="text" class="form-control" name="judul" placeholder="Judul artikel..."><br>
                  <textarea class="form-control" name="isi" placeholder="Isi artikel..." style="height: 400px"></textarea>
                </div>
                <div class="col-12 col-md-5 col-lg-4">
                  <button type="submit" class="col-12 btn btn-primary btn-shadow" name="submit" value="tambah">PUBLISH</button><br><br>
                  <div class="card">
                    <div class="card-body">
                      <div class="section-title mt-0">Deskripsi singkat</div>
                      <div class="form-group">
                        <textarea class="form-control" name="deskripsi" placeholder="Deskripsi singkat..." style="height: 100px"></textarea>
                      </div>
                      <div class="section-title mt-0">Kategori</div>
                      <div class="form-group">
                        <select class="form-control" name="id_kategori">
                          <% 
                            kategori.forEach((data)=> { 
                          %>
                          <option class="eKategori" value="<%= data.id %>"><%= data.kategori %></option>
                          <% }) %>
                        </select>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
            </form>
          </div>
        </section>
