<section class="section">
    <div class="section-header">
        <h1>Tambah Bidang Lomba</h1>
    </div>

    <div class="section-body">
        <form method="post" enctype="multipart/form-data">
            <div class="row">
                <div class="col-12 col-md-7 col-lg-8">

                    <input type="text" class="form-control" name="nama" placeholder="Nama Bidang Lomba" required><br>

                    <input type="text" class="form-control" name="hadiah" placeholder="Hadiah" required><br>

                    <div class="form-group">
                        <div class="input-group">
                            <div class="input-group-prepend">
                                <span class="input-group-text">
                                    Rp
                                </span>
                            </div>
                            <input type="text" class="form-control" name="biaya" placeholder="Biaya" required>
                        </div>
                    </div>

                    <textarea class=" form-control" name="desk" placeholder="Deskripsi.." style="height: 370px"
                        required></textarea>
                </div>

                <div class="col-12 col-md-5 col-lg-4">
                    <button type="submit" class="col-12 btn btn-primary btn-shadow" name="submit" value="tambah"
                        id="haha">Simpan</button><br><br>

                    <div class="card">
                        <div class="card-body">

                            <div class="form-group">
                                <div class="section-title mt-0">Gambar Bidang Lomba</div>
                                <input type="file" name="gambar" required>
                            </div>

                            <div class="form-group">
                                <div class="section-title mt-0">File Refrensi</div>
                                <input type="file" name="berkas" required>
                            </div>
                            
                            <div class="section-title mt-0">Link Group</div>
                            <div class="form-group">
                                <textarea class="form-control" name="link" placeholder="Link Grup (bila ada)"
                                    style="height: 100px"></textarea>
                            </div>

                        </div>
                    </div>
        </form>
    </div>
</section>