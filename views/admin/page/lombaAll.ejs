<section class="section">
    <div class="section-header">
        <div class="row m-0">
            <h1 class="mr-3">Data Lomba</h1>
            <a href="jenisLomba" class="btn btn-primary text-white mr-3"> Tambah
                Jenis Lomba</a>
        </div>
    </div>

    <div class="section-body">
        <div class="card">
            <div class="card-body">
                <div class="col-12 p-0">
                    <%
                        if (locals.berhasil){ %>
                        <script type="text/javascript">
                swal('Berhasil', '<%= locals.berhasil %>', 'success');
              </script>
                        <% } else if (locals.gagal) { %>
                            <script type="text/javascript">
                swal('Gagal', '<%= locals.gagal %>', 'error');
              </script>
                            <% }
                                %>
                            </div>
                            <div class="row">
                                <div class="col-12">
                                    <div class="table-responsive">
                                        <table id="myTable" class="table">
                                            <thead>
                                                <tr>
                                                    <th>No.</th>
                                                    <th>Gambar</th>
                                                    <th>Nama Lomba</th>
                                                    <th>Deskripsi</th>
                                                    <th>Tanggal</th>
                                                    <th>Action</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                <% var no=1;
                                                    jenis.forEach((data)=> {
                                                    if (data.gambar!==""){ var
                                                    gambar = data.gambar;}
                                                    else {var gambar =
                                                    "default.png";}
                                                    %>
                                                    <tr>
                                                        <td class="text-center">
                                                            <%= no %>
                                                            </td>
                                                            <td>
                                                                <img
                                                                    src="/assets/img/jenisLomba/<%=
                                                                    gambar %>"
                                                                class="thumbnail-table">
                                                                <button
                                                                    type="button"
                                                                    class="btn
                                                                    btn-table
                                                                    btn-sm
                                                                    btn-primary"
                                                                    title="Foto"
                                                                    data-toggle="modal"
                                                                    data-target="#gambarLomba"
                                                                    onclick='gambarlomba("<%=
                                                                    data.id %>")'><i
                                                                        class="fa
                                                                        fa-camera"></i></button>
                                                            </td>
                                                            <td>
                                                                <%=
                                                                    data.nama_lomba
                                                                    %>
                                                                </td>
                                                                <td>
                                                                    <%=
                                                                        data.desk
                                                                        %>
                                                                    </td>
                                                                    <td
                                                                        style="width:
                                                                        100px;">
                                                                        <%=
                                                                            data.tanggal
                                                                            %>
                                                                        </td>
                                                                        <td
                                                                            align="center"
                                                                            style="width:
                                                                            90px;">
                                                                            <a
                                                                                href="/editJenis/<%=
                                                                                data.id
                                                                                %>"
                                                                                class="btn
                                                                                btn-table
                                                                                btn-sm
                                                                                btn-primary"><i
                                                                                    class="fa
                                                                                    fa-pen"></i></a>
                                                                            <a
                                                                                href="/bidangAll/<%=
                                                                                data.id
                                                                                %>"
                                                                                class="btn
                                                                                btn-table
                                                                                btn-sm
                                                                                btn-success"><i
                                                                                    class="fa
                                                                                    fa-info"></i></a>
                                                                            <p
                                                                                id="<%=
                                                                                data.id
                                                                                %>"
                                                                                class="d-none"><%=
                                                                                    data.nama_lomba
                                                                                    %></p>
                                                                                <button
                                                                                    type="button"
                                                                                    class="btn
                                                                                    btn-table
                                                                                    btn-sm
                                                                                    btn-danger"
                                                                                    title="Hapus"
                                                                                    data-toggle="modal"
                                                                                    data-target="#hapusLomba"
                                                                                    onclick='hapusLomba("<%=
                                                                                    data.id
                                                                                    %>")'>
                                                                                    <i
                                                                                        class="fa
                                                                                        fa-times"></i></button>
                                                                            </td>
                                                                        </tr>
                                                                        <% no++;
                                                                            })
                                                                            %>
                                                                        </tbody>
                                                                    </table>
                                                                </div>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </section>

                                        <div class="modal fade" id="hapusLomba"
                                            tabindex="-1" role="dialog"
                                            style="display: none;"
                                            aria-modal="true">
                                            <div class="modal-dialog modal-md"
                                                role="document">
                                                <div class="modal-content">
                                                    <div class="modal-header">
                                                        <h5 class="modal-title"><i
                                                                class="fa
                                                                fa-pen"></i>Hapus
                                                            Kategori Lomba</h5>
                                                        <button type="button"
                                                            class="close"
                                                            data-dismiss="modal"
                                                            aria-label="Close">
                                                            <span
                                                                aria-hidden="true">×</span>
                                                        </button>
                                                    </div><hr>
                                                    <div class="modal-body">
                                                        <form
                                                            class="forms-sample"
                                                            method="post">
                                                            <div
                                                                class="form-group">
                                                                <input
                                                                    type="hidden"
                                                                    class="d-none"
                                                                    id="dId"
                                                                    name="id_lomba"
                                                                    required>
                                                                <p id="dHapus"></p>
                                                            </div><hr>
                                                            <div
                                                                class="modal-footer
                                                                p-0 pt-3">
                                                                <button
                                                                    type="button"
                                                                    class="btn
                                                                    btn-secondary"
                                                                    data-dismiss="modal">Cancel</button>
                                                                <button
                                                                    type="submit"
                                                                    class="btn
                                                                    btn-danger
                                                                    btn-shadow"
                                                                    name="submit"
                                                                    value="hapus"><i
                                                                        class="fa
                                                                        fa-check"></i><span>Hapus</span></button>
                                                            </div>
                                                        </form>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>

                                        <div class="modal fade" id="gambarLomba"
                                            tabindex="-1" role="dialog"
                                            style="display: none;"
                                            aria-modal="true">
                                            <div class="modal-dialog modal-md"
                                                role="document">
                                                <div class="modal-content">
                                                    <div class="modal-header">
                                                        <h5 class="modal-title"><i
                                                                class="fa
                                                                fa-pen"></i>
                                                            Edit Foto Artikel</h5>
                                                        <button type="button"
                                                            class="close"
                                                            data-dismiss="modal"
                                                            aria-label="Close">
                                                            <span
                                                                aria-hidden="true">×</span>
                                                        </button>
                                                    </div><hr>
                                                    <div class="modal-body">
                                                        <form
                                                            class="forms-sample"
                                                            method="post"
                                                            enctype="multipart/form-data">
                                                            <div
                                                                class="form-group">
                                                                <input
                                                                    type="hidden"
                                                                    class="d-none"
                                                                    id="gId"
                                                                    name="IdGambar"
                                                                    required>
                                                                <p for="foto">Upload
                                                                    foto :</p>
                                                                <input
                                                                    type="file"
                                                                    class="form-control"
                                                                    id="dgambar"
                                                                    name="gambar"
                                                                    required
                                                                    style="height:
                                                                    auto">
                                                            </div><hr>
                                                            <div
                                                                class="modal-footer
                                                                p-0 pt-3">
                                                                <button
                                                                    type="button"
                                                                    class="btn
                                                                    btn-secondary"
                                                                    data-dismiss="modal">Cancel</button>
                                                                <button
                                                                    type="submit"
                                                                    class="btn
                                                                    btn-primary
                                                                    btn-shadow"
                                                                    name="submit"
                                                                    value="gambar"><i
                                                                        class="fa
                                                                        fa-save"></i><span>
                                                                        Simpan</span></button>
                                                            </div>
                                                        </form>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>

                                        <script type="text/javascript">

  function gambarlomba(idGambar){
    console.log(idGambar)
    var dataGambar = (document.getElementById(idGambar).textContent).split(",");
    document.getElementById("gId").value = idGambar;
  }

  function hapusLomba(idJenis) {
    console.log(idJenis)
    var dataLomba = (document.getElementById(idJenis).textContent).split(",");
    document.getElementById("dId").value = idJenis;
    document.getElementById("dHapus").textContent = 'Apakah anda yakin ingin menghapus " ' + dataLomba[0] + '" ?';
  }

</script>