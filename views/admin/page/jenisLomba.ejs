<section class="section">
    <div class="section-header">
        <h1>Tambah Jenis Lomba</h1>
    </div>

    <div class="section-body">
        <form action="/jenisLomba" method="post" enctype="multipart/form-data">
            <div class="row">
                <div class="col-12 col-md-7 col-lg-8">

                    <input type="text" class="form-control" name="nama"
                        placeholder="Nama Lomba" required><br>

                    <input type="text" class="form-control" name="sumber"
                        placeholder="Sumber" required><br>

                    <div class="form-group">
                        <div class="input-group">
                            <div class="input-group-prepend">
                                <div class="input-group-text">
                                    <i class="fas fa-calendar"></i>
                                </div>
                            </div>
                            <input type="text" class="form-control daterange"
                                name="tanggal" required>
                        </div>
                    </div>

                    <textarea class="form-control" name="desk"
                        placeholder="Deskripsi.." style="height: 370px"
                        required></textarea>
                </div>

                <div class="col-12 col-md-5 col-lg-4">
                    <button type="submit" class="col-12 btn btn-primary
                        btn-shadow" name="submit" value="tambah"
                        id="haha">Simpan</button><br><br>

                    <div class="card">
                        <div class="card-body">

                            <!-- <div class="section-title mt-0">File Browser</div>
                  <div class="custom-file">
                    <input type="file" class="custom-file-input" id="customFile">
                    <label class="custom-file-label" for="customFile">Choose file</label>
                  </div><br> -->
                            <!-- <div class="form-group">
                <div class="section-title mt-0">Gambar Lomba</div>
                <input type="file" name="gambar" class="form-control">
              </div> -->
                            <div class="section-title mt-0">Tipe Lomba</div>
                            <div class="form-group">
                                <select class="form-control" name="tipe"
                                    required>
                                    <option class="eKategori" value="">Pilih
                                        Tipe</option>
                                    <option class="eKategori" value="Team">Team</option>
                                    <option class="eKategori" value="Individu">Individu</option>
                                </select>
                            </div>

                            <div class="section-title mt-0">Kategori Lomba</div>
                            <div class="form-group">
                                <select class="form-control"
                                    name="kategoriLomba" id="test" required>
                                    <option class="eKategori" value="0">Pilih
                                        Kategori</option>
                                    <% kategoriLomba.forEach((data)=> { %>
                                        <option class="eKategori" value="<%=
                                            data.id %>">
                                            <%= data.kategori %>
                                            </option>
                                            <% }) %>
                                            </select>
                                        </div>

                                        <div class="section-title mt-0">Tag
                                            Lomba</div>
                                        <div class="form-group">
                                            <input type="hidden" class="d-none"
                                                id="kId" name="id_kategori"
                                                required>

                                            <div class="selectTag kategori0">
                                                <label class="selectgroup-item">
                                                    <p> Silahkan Pilih Kategori
                                                        Dahulu !! </p>
                                                </label>
                                            </div>


                                            <% tag.forEach((data)=> { %>
                                                <div class="selectgroup
                                                    selectgroup-pills selectTag
                                                    kategori<%=
                                                    data.kategori_lomba_id %>"
                                                    style="display : none">
                                                    <label
                                                        class="selectgroup-item">
                                                        <input type="checkbox"
                                                            name="tag" value="<%=
                                                            data.id %>"
                                                        class="selectgroup-input"
                                                        >
                                                        <span
                                                            class="selectgroup-button">
                                                            <%= data.tag %>
                                                            </span>
                                                        </label>
                                                    </div>
                                                    <% }) %>
                                                    </div>
                                                </div>
                                            </div>
                                        </form>
                                    </div>
                                </section>

                                <script>

  document.getElementById('test').addEventListener('change', function () {
    let id = this.value
    console.log(this.value)

    let hasil = document.getElementsByClassName('selectTag');
    console.log(2)
    for (let i = 0; i < hasil.length; i++) {
      hasil[i].style.display = "none";
      console.log(hasil.length)
    }

    let tag = document.getElementsByClassName('kategori' + id)
    console.log(4)
    for (let i = 0; i < tag.length; i++) {
      tag[i].style.display = "block";
      console.log(tag.length)
    }

  });

  function getSelectedChbox(frm) {
    let selchbox = []; //data dimasukin ke array 

    // dapetin semua data dan nomor yang dimasukkan ke frm yang sebelum e udah dipilih lalu disimpan di variabel inpfields
    let inpfields = frm.getElementsByTagName('input');

    // ngubah data yg disimpan di inpfields jadi checkbox, terus valuenya dichecked (dicentang) agar terpilih
    for (let i = 0; i < inpfields.length; i++) {
      if (inpfields[i].type == 'checkbox' && inpfields[i].checked == true) selchbox.push(inpfields[i].value);
    }

    return selchbox;
  }

  //cuma ngasih pop up buat testing nampilin data yang udah dipilih dan diolah dari proses inpfield
  document.getElementById('tag').onclick = function () {
    let selchb = getSelectedChbox(this.form); // dapetin array dari fungsi getSelectedChbox()
    alert(selchb);
    return selchb;
  }
</script>