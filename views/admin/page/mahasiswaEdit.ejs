<section class="section">
    <div class="section-header">
        <h1>Edit mahasiswa</h1>
    </div>

    <div class="section-body">
        <form method="post" action="./mahasiswaEdit">
            <div class="row">
                <div class="col-12 col-md-7 col-lg-8">
                    <div class="card">
                        <div class="card-body">
                            <input type="hidden" class="d-none" name="id" value="<%= mahasiswa[0].id %>">
                            <h5>Data Diri Mahasiswa</h5>
                            <hr>
                            <label for="exampleInputEmail1">Nama</label>
                            <input type="text" class="form-control" name="nama" id="exampleInputEmail1"
                                aria-describedby="emailHelp" placeholder="Nama Mahasiswa" value="<%= mahasiswa[0].nama %>">
                            <label for="exampleInputEmail1">Nim</label>
                            <input type="text" class="form-control" name="nim" id="exampleInputEmail1"
                                aria-describedby="emailHelp" placeholder="Nomor Induk Mahasiswa"
                                value="<%= mahasiswa[0].nim %>">
                            <label for="exampleInputEmail1">Jurusan</label>
                            <input type="text" class="form-control" name="jurusan" id="exampleInputEmail1"
                                aria-describedby="emailHelp" placeholder="Jurusan Mahasiswa"
                                value="<%= mahasiswa[0].jurusan %>">
                            <label for="exampleInputEmail1">Bidang Minat</label>
                            <input type="text" class="form-control" name="bidang_minat" id="exampleInputEmail1"
                                aria-describedby="emailHelp" placeholder="Bidang Minat Mahasiswa"
                                value="<%= mahasiswa[0].bidang_minat %>">
                        </div>
                    </div>
                </div>
                <div class="col-12 col-md-5 col-lg-4">
                    <button type="submit" class="col-12 btn btn-primary btn-shadow" name="submit"
                        value="edit">UPDATE</button><br><br>
                    <div class="card">
                        <div class="card-body">
                            <div class="section-title mt-0">Deskripsi singkat</div>
                            <div class="form-group">
                                <textarea class="form-control" name="deskripsi" placeholder="Deskripsi singkat..."
                                    style="height: 100px"><%= mahasiswa[0].deskripsi %></textarea>
                            </div>
                            <div class="section-title mt-0">Berita</div>
                            <div class="form-group">
                                <select class="form-control" name="lomba_id">
                                    <option class="eKategori" value="1">lomba 1</option>
                                    <option class="eKategori" value="2">lomba 2</option>
                                </select>
                            </div>
                            <div class="section-title mt-0">Kategori</div>
                            <div class="form-group">
                                <select class="form-control" name="id_berita" value="<%= mahasiswa[0].beritum_id %>">
                                    <% 
                              berita.forEach((data)=> { 
                            %>
                                    <option class="eKategori" value="<%= data.id %>"
                                        <% if(data.id==mahasiswa[0].id_berita){ %>selected<% } %>><%= data.berita %>
                                    </option>
                                    <% }) %>
                                </select>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </form>
    </div>
</section>