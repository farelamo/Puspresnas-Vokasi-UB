
<section class="section">
    <div class="section-header">
        <div class="row m-0">
            <h1 class="mr-3">Semua berita</h1>
            <a href="beritaNew" class="btn btn-primary text-white"> Tambah
                Berita</a>
        </div>
    </div>

    <div class="section-body">
        <div class="card">
            <div class="card-body">
                <div class="col-12 p-0">
                    <%
                        if (locals.berhasil){ %>
                        <script type="text/javascript">
                        swal('Berhasil', '<%= locals.berhasil %>', 'success');
                      </script>
                        <% } else if (locals.gagal) { %>
                            <script type="text/javascript">
                        swal('Gagal', '<%= locals.gagal %>', 'error');
                      </script>
                            <% }
                                %>
                            </div>
                            <div class="row">
                                <div class="col-12">
                                    <div class="table-responsive">
                                        <table id="myTable" class="table">
                                            <thead>
                                                <tr>
                                                    <th>No.</th>
                                                    <th>Foto</th>
                                                    <th>Judul</th>
                                                    <th>Deskripsi</th>
                                                    <th>Tanggal</th>
                                                    <th>Action</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                <%
                                                    var no= 1;
                                                    berita.forEach((data)=> {
                                                    if (data.foto!==""){ var
                                                    foto = data.foto;}
                                                    else {var foto =
                                                    "default.png";}
                                                    %>
                                                    <tr>
                                                        <td class="text-center"><%=
                                                                no %></td>
                                                            <td>
                                                                <img
                                                                    src="/assets/img/berita/<%=
                                                                    foto %>"
                                                                class="thumbnail-table">
                                                            </td>
                                                            <td><%= data.judul
                                                                    %></td>
                                                                <td><%=
                                                                        data.deskripsi
                                                                        %></td>
                                                                    <td
                                                                        style="width:
                                                                        100px;"><%=
                                                                            data.tanggal
                                                                            %></td>
                                                                        <td
                                                                            align="center"
                                                                            style="width:
                                                                            90px;">
                                                                            <a
                                                                                href="beritaEdit/<%=
                                                                                data.id
                                                                                %>"
                                                                                class="btn
                                                                                btn-table
                                                                                btn-sm
                                                                                btn-primary"
                                                                                title="Edit"><i
                                                                                    class="fa
                                                                                    fa-pen"></i></a>
                                                                            <button
                                                                                type="button"
                                                                                class="btn
                                                                                btn-table
                                                                                btn-sm
                                                                                btn-primary"
                                                                                title="Foto"
                                                                                data-toggle="modal"
                                                                                data-target="#fotoBerita"
                                                                                onclick='fotoBerita("<%=
                                                                                data.id
                                                                                %>")'><i
                                                                                    class="fa
                                                                                    fa-camera"></i></button>
                                                                            <p
                                                                                id="<%=
                                                                                data.id
                                                                                %>"
                                                                                class="d-none"><%=
                                                                                    data.judul
                                                                                    %></p>
                                                                                <button
                                                                                    type="button"
                                                                                    class="btn
                                                                                    btn-table
                                                                                    btn-sm
                                                                                    btn-danger"
                                                                                    title="Hapus"
                                                                                    data-toggle="modal"
                                                                                    data-target="#hapusBerita"
                                                                                    onclick='hapusBerita("<%=
                                                                                    data.id
                                                                                    %>")'><i
                                                                                        class="fa
                                                                                        fa-times"></i></button>
                                                                            </td>
                                                                        </tr>
                                                                        <% no++;
                                                                            })
                                                                            %>
                                                                        </tbody>
                                                                    </table>
                                                                </div>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </section>

                                        <div class="modal fade" id="fotoBerita"
                                            tabindex="-1" role="dialog"
                                            style="display: none;"
                                            aria-modal="true">
                                            <div class="modal-dialog modal-md"
                                                role="document">
                                                <div class="modal-content">
                                                    <div class="modal-header">
                                                        <h5 class="modal-title"><i
                                                                class="fa
                                                                fa-pen"></i>
                                                            Edit Foto Berita</h5>
                                                        <button type="button"
                                                            class="close"
                                                            data-dismiss="modal"
                                                            aria-label="Close">
                                                            <span
                                                                aria-hidden="true">×</span>
                                                        </button>
                                                    </div><hr>
                                                    <div class="modal-body">
                                                        <form
                                                            class="forms-sample"
                                                            method="post"
                                                            enctype="multipart/form-data">
                                                            <div
                                                                class="form-group">
                                                                <input
                                                                    type="hidden"
                                                                    class="d-none"
                                                                    id="fId"
                                                                    name="id_berita"
                                                                    required>
                                                                <p for="foto">Upload
                                                                    foto :</p>
                                                                <input
                                                                    type="file"
                                                                    class="form-control"
                                                                    id="foto"
                                                                    name="foto"
                                                                    required
                                                                    style="height:
                                                                    auto">
                                                            </div><hr>
                                                            <div
                                                                class="modal-footer
                                                                p-0 pt-3">
                                                                <button
                                                                    type="button"
                                                                    class="btn
                                                                    btn-secondary"
                                                                    data-dismiss="modal">Cancel</button>
                                                                <button
                                                                    type="submit"
                                                                    class="btn
                                                                    btn-primary
                                                                    btn-shadow"
                                                                    name="submit"
                                                                    value="foto"><i
                                                                        class="fa
                                                                        fa-save"></i><span>
                                                                        Simpan</span></button>
                                                            </div>
                                                        </form>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>

                                        <div class="modal fade" id="hapusBerita"
                                            tabindex="-1" role="dialog"
                                            style="display: none;"
                                            aria-modal="true">
                                            <div class="modal-dialog modal-md"
                                                role="document">
                                                <div class="modal-content">
                                                    <div class="modal-header">
                                                        <h5 class="modal-title"><i
                                                                class="fa
                                                                fa-times"></i>
                                                            Hapus berita</h5>
                                                        <button type="button"
                                                            class="close"
                                                            data-dismiss="modal"
                                                            aria-label="Close">
                                                            <span
                                                                aria-hidden="true">×</span>
                                                        </button>
                                                    </div><hr>
                                                    <div class="modal-body">
                                                        <form
                                                            class="forms-sample"
                                                            method="post">
                                                            <div
                                                                class="form-group">
                                                                <p id="dHapus">Apakah
                                                                    anda yakin
                                                                    ingin
                                                                    menghapus
                                                                    berita ini?</p>
                                                                <input
                                                                    type="hidden"
                                                                    class="d-none"
                                                                    class="form-control"
                                                                    id="dId"
                                                                    name="id_berita"
                                                                    value=""
                                                                    required>
                                                            </div><hr>
                                                            <div
                                                                class="modal-footer
                                                                p-0 pt-3">
                                                                <button
                                                                    type="button"
                                                                    class="btn
                                                                    btn-secondary"
                                                                    data-dismiss="modal">Cancel</button>
                                                                <button
                                                                    type="submit"
                                                                    class="btn
                                                                    btn-danger
                                                                    btn-shadow"
                                                                    name="submit"
                                                                    value="hapus"><i
                                                                        class="fa
                                                                        fa-times"></i><span>
                                                                        Hapus</span></button>
                                                            </div>
                                                        </form>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>

                                        <script type="text/javascript">
  function hapusBerita(idberita){
    var dataBerita = (document.getElementById(idberita).textContent).split(",");
    document.getElementById("dId").value = idberita;
    document.getElementById("dHapus").textContent = 'Apakah anda yakin ingin menghapus "'+dataBerita[0]+'"?';
  }
  function fotoBerita(idberita){
    var dataBerita = (document.getElementById(idberita).textContent).split(",");
    document.getElementById("fId").value = idberita;
  }
</script>